@import url('https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=EB+Garamond:wght@800&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap');
body {
  font-family: 'Arial', sans-serif;
}
header.page-header {
  background: linear-gradient(120deg, #1a2a6c, #b21f1f, #fdbb2d) !important;
  color: white !important;
}
.project-name {
  font-size: 3em;
  font-family: "EB Garamond", serif;
  font-optical-sizing: auto;
  font-weight: 800;
  font-style: normal;
}

.project-tagline {
  font-size: 1.5em;
}
nav ul {
  list-style: none;
  padding: 10px 0;
  background: #1a2a6c;
  text-align: center;
}
nav li {
  display: inline;
  margin: 0 20px;
}
nav a {
  color: white;
  text-decoration: none;
  font-weight: bold;
}
nav a:hover {
  text-decoration: underline;
}